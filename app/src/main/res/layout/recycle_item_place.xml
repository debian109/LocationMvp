<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/bg_white_border"
    tools:context="com.sutrix.places.view.ListPlaceFragment">

    <TextView
        android:maxLines="2"
        android:textSize="16sp"
        android:gravity="left"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="#6b6b6b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/name_textview"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/left_guildline"
        app:layout_constraintRight_toLeftOf="@+id/right_guideline"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:maxLines="2"
        android:textStyle="bold"
        android:textColor="#234a99"
        android:gravity="left|start"
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/vicinity_textview"
        app:layout_constraintLeft_toLeftOf="@+id/left_guildline"
        app:layout_constraintRight_toLeftOf="@+id/right_guideline"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp" />

    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/homeAsUpIndicator"
        android:id="@+id/direction_imageview"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/distance_textview"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/distance_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="12sp"
        android:gravity="left"
        android:text="120.2 yd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distance_textview"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/vicinity_textview"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vicinity_textview" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/right_guideline"
        app:layout_constraintGuide_begin="262dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="262dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guildline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

</android.support.constraint.ConstraintLayout>
